@model IEnumerable<WebApplication15.Models.tablephonebook>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="container text-center col-md-6">
        <form>
            <div class="form-group">
                <label for="exampleFilter">Фильтры</label>
                <input type="text" name="textbox1" placeholder="имя" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" name="textbox2" placeholder="фамилия" class="form-control" />
            </div>
            <div class="form-group">
                <input type="text" name="textbox3" placeholder="отчество" class="form-control" />
            </div>
            <div class="form-group">
                <input type="tel" name="textbox4" placeholder="телефон" class="form-control" />
            </div>
        </form>
    </div>
    <!--тут цикл вывода datagridview-->
    <table class="table">
        <tr>
            <td>Номер</td>
            <td>Имя</td>
            <td>Фамилия</td>
            <td>отчество</td>
            <td>телефон</td>
            <td>удаление</td>
            <td>Редактирование</td>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.id</td>
        <td>@item.im</td>
        <td>@item.fm</td>
        <td>@item.ot</td>
        <td>@item.phone</td>


        <td><a asp-action="delete" asp-controller="Home" asp-route-id="@item.id">Удалить</a></td>
        <td><a asp-action="edit" asp-controller="Home" asp-route-id="@item.id">Редактировать</a></td>
    </tr>
        }
    </table>
    <div class="container text-center col-md-6">
        <form>
            <a asp-action="create" asp-controller="Home">Добавить пользователя</a>
        </form>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Удаление</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Вы действительно хотите удалить запись?
            </div>
            <div class="modal-footer">
                <!-- <button type="button" class="btn btn-primary" asp-action="delete" asp-controller="Home" asp-route-id=@*model.id*@>Удалить</button>-->
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">ок</button>
            </div>
        </div>
    </div>
</div>
