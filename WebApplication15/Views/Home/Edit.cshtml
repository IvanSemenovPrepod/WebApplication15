@model WebApplication15.Models.tablephonebook
@{
    ViewBag.Title = "Редактирование пользователя";
}<div class="container col-md-6">
    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.id">
        <div class="form-group">
            <label asp-for="im" class="control-label">Имя</label>
            <input type="text" asp-for="im" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="fm" class="control-label">Фамилия</label>
            <input type="text" asp-for="fm" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ot" class="control-label">Отчество</label>
            <input type="text" asp-for="ot" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="phone" class="control-label">Телефон</label>
            <input type="text" asp-for="phone" class="form-control" />
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Сохранить" class="btn btn-link" />
        </div>
    </form>
</div>